<assembly>
	<id>all</id>
	<formats>
		<format>tar.gz</format>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>DataCleaner</baseDirectory>
	<files>
		<file>
			<source>target/DataCleaner.jar</source>
		</file>
		<file>
			<source>src/main/assembly/datacleaner.cmd</source>
		</file>
		<file>
			<source>src/main/assembly/datacleaner.sh</source>
			<fileMode>755</fileMode>
		</file>
		<file>
			<source>../COPYING.txt</source>
		</file>
		<file>
			<source>../NOTICE.txt</source>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>examples</directory>
			<outputDirectory>/examples</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/lib</directory>
			<outputDirectory>/lib</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
