<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.eobjects.datacleaner</groupId>
		<artifactId>DataCleaner-packaging</artifactId>
		<version>3.1-SNAPSHOT</version>
	</parent>
	<artifactId>DataCleaner-jnlp</artifactId>
	<name>DataCleaner - JNLP/WebStart packaging</name>

	<dependencies>
		<!-- The desktop DataCleaner application -->
		<dependency>
			<groupId>org.eobjects.datacleaner</groupId>
			<artifactId>DataCleaner-desktop</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<!-- Java Web start JNLP file generation -->
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>webstart-maven-plugin</artifactId>
				<version>1.0-beta-3</version>
				<configuration>
					<templateFilename>template.vm</templateFilename>
					<jnlp>
						<outputFile>datacleaner.jnlp</outputFile>
						<mainClass>${mainClass}</mainClass>
					</jnlp>
					<outputJarVersions>false</outputJarVersions>
					<verbose>true</verbose>
					<makeArchive>false</makeArchive>
				</configuration>
				<executions>
					<execution>
						<id>jnlp-inline-on-package</id>
						<goals>
							<goal>jnlp-inline</goal>
						</goals>
						<phase>package</phase>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<!-- Sign JAR files in jnlp folder -->
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jarsigner-plugin</artifactId>
				<version>1.2</version>
				<executions>
					<execution>
						<id>sign-on-verify</id>
						<phase>verify</phase>
						<goals>
							<goal>sign</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<keystore>src/main/jnlp/dc_keystore</keystore>
					<alias>dc_alias</alias>
					<storepass>dc_pass</storepass>
					<keypass>dc_pass</keypass>
					<archiveDirectory>target/jnlp</archiveDirectory>
					<processMainArtifact>false</processMainArtifact>
					<verbose>true</verbose>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>