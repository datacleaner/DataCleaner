<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns="http://eobjects.org/analyzerbeans/configuration/1.0"
>

	<datastore-catalog>
		<jdbc-datastore name="orderdb" description="DataCleaner example database">
			<url>jdbc:hsqldb:res:orderdb;readonly=true</url>
			<driver>org.hsqldb.jdbcDriver</driver>
			<username>SA</username>
			<password></password>
		</jdbc-datastore>
		
		<csv-datastore name="Vendors">
			<filename>reference-data/vendor_dictionary.txt</filename>
			<header-line-number>0</header-line-number>
		</csv-datastore>
	</datastore-catalog>
	
	<reference-data-catalog>
		<dictionaries>
			<text-file-dictionary name="vendor whitelist">
				<filename>reference-data/vendor_dictionary.txt</filename>
			</text-file-dictionary>
		</dictionaries>
		<synonym-catalogs>
			<text-file-synonym-catalog name="job title synonyms">
				<filename>reference-data/job_title_synonyms.txt</filename>
			</text-file-synonym-catalog>
		</synonym-catalogs>
		<string-patterns>
			<regex-pattern name="all uppercase">
				<expression>\\p{javaLowerCase}+</expression>
				<match-entire-string>true</match-entire-string>
			</regex-pattern>
			<regex-pattern name="contains car">
				<expression>.*[Cc]ar.*</expression>
				<match-entire-string>false</match-entire-string>
			</regex-pattern>
			<simple-pattern name="All lowercase">
				<expression>a</expression>
			</simple-pattern>
		</string-patterns>
	</reference-data-catalog>

	<custom-taskrunner
		class-name="org.datacleaner.monitor.configuration.SharedTaskRunner" />

	<custom-descriptor-provider
		class-name="org.datacleaner.monitor.configuration.SharedDescriptorProvider" />

</configuration>
